<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="5.0">

    <servlet>
        <servlet-name>Log</servlet-name>
        <servlet-class>studentgrader.Login</servlet-class>
    </servlet>
     <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
   
    <context-param>
    <param-name>connection</param-name>
    <param-value>jdbc:mysql://localhost:3306/grader</param-value>
    </context-param>
    
        <context-param>
    <param-name>dusername</param-name>
    <param-value>root</param-value>
    </context-param>
        <context-param>
    <param-name>dpassword</param-name>
    <param-value>******</param-value>
    </context-param>
    
    <servlet-mapping>
        <servlet-name>Log</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>for</servlet-name>
        <servlet-class>studentgrader.Forgot</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>for</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>New</servlet-name>
        <servlet-class>studentgrader.Newuser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>New</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>
</web-app>
